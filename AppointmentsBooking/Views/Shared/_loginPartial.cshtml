@inject Microsoft.AspNetCore.Identity.SignInManager<AppointmentsBooking.Models.ApplicationUser> signInManager

@if (signInManager.IsSignedIn(User))
{
    <form method="post" id="logoutForm" asp-action="logout" asp-controller="Account">
        <ul class="nav navbar-nav">
            <li class="nav-link">
                <span class="text-light">Hello , @User.Identity.Name!</span>
            </li>
            @if (User.IsInRole(AppointmentsBooking.Helpers.Helper.Admin))
            {
                <li>
                    <a class="nav-link text-light" asp-controller="Account" asp-action="Register">Register Admin</a>
                </li>
            }
            <li>
                <button type="submit" class="btn btn-link text-light">Sign out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav">
        <li>
            <a class="nav-link text-light" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li>
            <a class="nav-link text-light" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    </ul>
}