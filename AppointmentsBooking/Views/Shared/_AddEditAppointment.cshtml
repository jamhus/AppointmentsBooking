<div class="modal fade" role="dialog" id="appointmentInput" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="appointmentForm" autocomplete="off" novalidate="novalidate">
                <input type="hidden" id="id" />
                <div class="modal-header">
                    @if (User.IsInRole(AppointmentsBooking.Helpers.Helper.Admin))
                    {
                        <h4 class="modal-title">
                            Add / Edit appointment
                        </h4>
                    }
                    else
                    {
                        <h4 class="modal-title">
                            Appointment Details
                        </h4>
                    }

                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" id="title" value="" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea type="text" id="description" value="" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="appointmentDate">Start Date Time</label>
                        <input id="appointmentDate" class="form-control" />
                    </div>
                    @if (User.IsInRole(AppointmentsBooking.Helpers.Helper.Admin))
                    {
                        <div class="form-group">
                            <label for="patientId">Select Patient</label>
                            <select id="patientId" asp-items="@(new SelectList(ViewBag.ListOfPatients,"Id","Name"))" class="form-control"></select>
                        </div>
                    }
                    else
                    {
                        @if (User.IsInRole(AppointmentsBooking.Helpers.Helper.Doctor))
                        {
                            <div class="form-group">
                                <label for="lblPatientName">Patient Name</label>
                                <input type="text" id="lblPatientName" disabled class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="lblStatus">status</label>
                                <input type="text" id="lblStatus" disabled class="form-control" />
                            </div>
                        }
                        @if (User.IsInRole(AppointmentsBooking.Helpers.Helper.Patient))
                        {
                            <div class="form-group">
                                <label for="lblDoctorName">Doctor Name</label>
                                <input type="text" id="lblDoctorName" disabled class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="lblStatus">status</label>
                                <input type="text" id="lblStatus" disabled class="form-control" />
                            </div>
                        }
                    }
                    <div class="form-group">
                        <label for="duration">Duration</label>
                        <select id="duration" asp-items="@ViewBag.Duration" class="form-control"></select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" onclick="onCloseModal();">Close</button> &nbsp;
                    @if (User.IsInRole(AppointmentsBooking.Helpers.Helper.Admin))
                    {
                        <button class="btn btn-success" id="btnSubmit" type="button" onclick="onSubmitForm();">Submit</button>
                        <button class="btn btn-danger" id="btnDelete" type="button" onclick="onDeleteEvent();">Delete</button>
                    }
                    @if (User.IsInRole(AppointmentsBooking.Helpers.Helper.Doctor))
                    {
                        <button class="btn btn-success" id="btnConfirm" type="button" onclick="onConfirmEvent();">Confirm</button>
                        <button class="btn btn-danger" id="btnDelete" type="button" onclick="onDeleteEvent();">Delete</button>
                    }
                </div>
            </form>
        </div>
    </div>
</div>